<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/playlist_item_background"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/edit_button"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlist_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playlist Item"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/playlist_item_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://example.com/stream.m3u8"
            android:textColor="#808080"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/playlist_item_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_edit"
        android:tint="#FFFFFF"
        android:contentDescription="Edit"/>

    <ImageButton
        android:id="@+id/playlist_item_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toStartOf="@id/playlist_item_edit"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_delete"
        android:tint="#FF5252"
        android:contentDescription="Delete"/>

</RelativeLayout>
